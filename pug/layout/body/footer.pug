    .row
      .col-lg-5.col-md-6
        .footer-img-container
          img.footer-img.img-fluid(src="../assets/images/footer-img.png" alt="footer image")
          i.far.fa-play-circle.play-video-icon
      .col-lg-3.offset-lg-4.col-md-6
        .h3.heading-tertiary contact us
        form(action="#")
          .form-group
            input.form-control(type="email" placeholder="Enter Your Email")
